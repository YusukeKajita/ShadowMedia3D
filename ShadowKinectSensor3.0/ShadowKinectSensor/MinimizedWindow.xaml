<Window x:Class="ShadowKinectSensor.MinimizedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MinimizedWindow" Height="70" Width="260" WindowStyle="None" AllowsTransparency="True" Topmost="True" WindowStartupLocation="CenterScreen" BorderBrush="Black" Opacity="0.75" BorderThickness="0" Background="#00000000" MouseDoubleClick="Window_MouseDoubleClick">
    <Grid>
        <Rectangle RadiusX="10" RadiusY="10" StrokeThickness="5" Stroke="Black">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF460000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel Margin="10">
            <TextBlock TextWrapping="Wrap" Text="ShadowKinectSensor" Foreground="White" FontSize="15"/>
            <TextBlock Text="ダブルクリックで元の大きさに戻ります" Foreground="Gray" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
